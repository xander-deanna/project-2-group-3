<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <div class="card">
            <div class="col-md-3">
                <img class="img-fluid img-thumbnail" src="{{photo}}" alt="Picture of {{name}}" style="float: left;" />
            </div>
            <div class="col-md-6">
                <h5 class="card-title border-bottom border-4">{{name}}</h5>
                <h6 class="card-subtitle">Interests</h4>
                    <ul class="user-interests">
                        {{!-- Filler for the User Interest --}}
                        {{#each interests as |interest|}}
                        <li>{{interest_name}}</li>
                        {{/each}}
                    </ul>
            </div>
            <div class="col-md-3"><i class="fas fa-calendar-plus"></i></div>
        </div>
    </div>
    <div class="col-md-1"></div>
</div>