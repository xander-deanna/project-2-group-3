

<div class="card text-center">
  <div class="card-header">
    <h4>Your Profile</h4>
  </div>
  <div class="card-body">
    <img class="user-image-large justify-content-center" src={{image_path}}
    <br>
      <div class="d-grid gap-2 d-md-block">
      {{!-- photo upload button --}}
      <button class="btn btn-success" id="upload_widget" value = "{{userId}}" class="cloudinary-button">Upload a profile picture</button>
      {{!-- user interests modal button --}}
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">Add interests</button>
    </div>
  </div>
  <div class="card-footer text-muted">
  </div>
</div>

{{!-- user interests modal --}}
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add your interests</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{!-- interest buttons --}}
        {{#each interests as |interests|}}
        {{>interest-details}}
        {{/each}}
      </div>
    </div>
  </div>
</div>

{{!-- cloudinary image upload widget script --}}
<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
  <script type="text/javascript">
  const uID = document.querySelector('data-id');
    var myWidget = cloudinary.createUploadWidget({
      cloudName: 'superman123',
      upload_preset: 'n5mndyvl',
    }, (error, result) => {
      if (result.event == "success") {
        console.log(result.info.path) // result.info contains data from upload
        const newImagePath = "http://res.cloudinary.com/superman123/image/upload/" + result.info.path;
        const Heller = "Hello";
        const UID = document.querySelector('#upload_widget').getAttribute('value');

        console.log("This is the User ID", UID);

        const response = fetch(`/api/users/profile/${UID}`, {
          method: 'PUT',
          body: JSON.stringify({ newImagePath }),
          headers: { 'Content-Type': 'application/json' },
        });

        if (response.ok) {
          document.location.replace('/profile');
        } else {
          alert('Image was not updated');
        }
      }
    })

    document.getElementById("upload_widget").addEventListener("click", function () {
      myWidget.open();
    }, false);

  </script>
